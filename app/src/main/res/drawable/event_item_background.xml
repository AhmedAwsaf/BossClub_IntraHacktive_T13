<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Set a gradient background color -->
    <gradient
        android:startColor="#9373C1"
        android:endColor="#E7DEFA"
        android:angle="45"/>

    <!-- Set rounded corners -->
    <corners android:radius="16dp"/>

    <!-- Set padding inside the drawable -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>
