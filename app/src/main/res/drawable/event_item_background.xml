<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Set a solid white background -->
    <solid android:color="#FFFFFF"/>

    <!-- Set rounded corners -->
    <corners android:radius="16dp"/>

    <!-- Set a light black border -->
    <stroke
        android:width="1dp"
        android:color="#1A000000"/> <!-- 10% opacity black -->

    <!-- Set padding inside the drawable -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>
