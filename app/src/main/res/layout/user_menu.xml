<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Styled Menu Heading -->
    <TextView
        android:id="@+id/menuHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Menu"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/purple_500"
        android:layout_marginBottom="32dp"
        android:letterSpacing="0.1"
        android:gravity="center"
        tools:ignore="HardcodedText" />

    <!-- Menu Buttons in GridLayout -->
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false">

        <!-- Event Button with Label -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="8dp">

            <ImageButton
                android:id="@+id/eventButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/event" <!-- Replace with actual drawable -->
            android:background="@android:color/transparent"
            android:contentDescription="Event"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Events"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/black"/>
        </LinearLayout>

        <!-- Budget Button with Label -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="8dp">

            <ImageButton
                android:id="@+id/budgetButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/budget"
                tools:ignore="ImageContrastCheck" /> <!-- Replace with actual drawable -->
            android:background="@android:color/transparent"
            android:contentDescription="Budget"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Budget Request"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/black"/>
        </LinearLayout>

        <!-- Room Booking Button with Label -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="8dp">

            <ImageButton
                android:id="@+id/roomButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="TODO"
                android:src="@drawable/room" <!-- Replace with actual drawable -->
            android:background="@android:color/transparent"
            android:contentDescription="Room Booking"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room Booking"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/black"/>
        </LinearLayout>

        <!-- Announcements Button with Label -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="8dp">

            <ImageButton
                android:id="@+id/announcementButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="TODO"
                android:src="@drawable/announcements" <!-- Replace with actual drawable -->
            android:background="@android:color/transparent"
            android:contentDescription="Announcements"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Announcements"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/black"/>
        </LinearLayout>

        <!-- Survey Button with Label -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="8dp">

            <ImageButton
                android:id="@+id/surveyButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="TODO"
                android:src="@drawable/survey" <!-- Replace with actual drawable -->
            android:background="@android:color/transparent"
            android:contentDescription="Survey"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Survey"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/black"/>
        </LinearLayout>

        <!-- Communicate Button with Label -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="8dp">

            <ImageButton
                android:id="@+id/communicateButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="TODO"
                android:src="@drawable/communication" <!-- Replace with actual drawable -->
            android:background="@android:color/transparent"
            android:contentDescription="Communicate"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Communicate"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/black"/>
        </LinearLayout>

    </GridLayout>
</LinearLayout>
