<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:backgroundTint="#FFFFFF"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Image at the top of the admin login screen -->
    <ImageView
        android:id="@+id/adminLoginImage"
        android:layout_width="254dp"
        android:layout_height="235dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="32dp"
        android:contentDescription="Admin Portal Logo"
        android:src="@drawable/admin" />

    <!-- Admin username input -->
    <EditText
        android:id="@+id/adminUsernameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_edit_text"
        android:elevation="4dp"
        android:hint="Admin Username"
        android:inputType="text"
        android:padding="16dp" />

    <!-- Admin password input -->
    <EditText
        android:id="@+id/adminPasswordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="@drawable/rounded_edit_text"
        android:elevation="4dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="16dp" />

    <!-- Login button with rounded corners -->
    <Button
        android:id="@+id/adminLoginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#6200EA"
        android:elevation="8dp"
        android:fontFamily="sans-serif-medium"
        android:padding="12dp"
        android:text="Login"
        android:textColor="#FFFFFF" />

</LinearLayout>
