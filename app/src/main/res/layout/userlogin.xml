<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:backgroundTint="#FFFFFF"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Image at the top of the login screen -->

    <!-- Username input with rounded corners -->
    <ImageView
        android:id="@+id/loginImage"
        android:layout_width="203dp"
        android:layout_height="196dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="32dp"
        android:contentDescription="Logo"
        android:src="@drawable/login" />

    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_edit_text"
        android:elevation="4dp"
        android:hint="Username"
        android:inputType="text"
        android:padding="16dp" />

    <!-- Password input with rounded corners -->
    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="@drawable/rounded_edit_text"
        android:elevation="4dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="16dp" />

    <!-- Login button with rounded corners and shadow -->
    <Button
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#6200EA"
        android:elevation="8dp"
        android:fontFamily="sans-serif-medium"
        android:padding="12dp"
        android:text="Login"
        android:textColor="#FFFFFF" />

    <!-- Hyperlink for Admin Login -->
    <TextView
        android:id="@+id/adminLoginLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:fontFamily="sans-serif-medium"
        android:minHeight="48dp"
        android:text="Admin Login"
        android:textColor="#6200EA"
        android:textSize="16sp" />

    <!-- Hyperlink for Create an Account -->
    <TextView
        android:id="@+id/createAccountLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        android:fontFamily="sans-serif-medium"
        android:minHeight="48dp"
        android:text="Create an Account"
        android:textColor="#6200EA"
        android:textSize="16sp" />
</LinearLayout>
